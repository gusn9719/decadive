<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="kr.ac.kopo.item.vo.ItemVO" alias="itemVO" />
		<typeAlias type="kr.ac.kopo.member.vo.MemberVO" alias="memberVO" />
		<typeAlias type="kr.ac.kopo.cart.vo.CartItemVO" alias="cartItemVO" />
		
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver"
					value="oracle.jdbc.driver.OracleDriver" />
				<property name="url"
					value="jdbc:oracle:thin:@localhost:1521:xe" />
				<property name="username" value="hr" />
				<property name="password" value="hr" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mybatis/mapper/item.xml" />
		<mapper resource="mybatis/mapper/member.xml" />
		<mapper resource="mybatis/mapper/cart.xml" />
		
		
	</mappers>
</configuration>